<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 骑手版特定权限 -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />

    <application
        tools:node="merge">

        <!-- 骑手版特定Activity -->
        <activity
            android:name=".presentation.courier.CourierDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.MyanmarExpress.Courier"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.courier.TaskExecutionActivity"
            android:exported="false"
            android:theme="@style/Theme.MyanmarExpress.Courier.Task"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.courier.NavigationActivity"
            android:exported="true"
            android:theme="@style/Theme.MyanmarExpress.Courier.Navigation">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="geo" />
            </intent-filter>
        </activity>

        <!-- 骑手版服务 -->
        <service
            android:name=".data.service.LocationTrackingService"
            android:exported="false"
            android:foregroundServiceType="location" />

        <service
            android:name=".data.service.OrderAcceptanceService"
            android:exported="false" />

        <service
            android:name=".data.service.EarningsCalculationService"
            android:exported="false" />

        <!-- 骑手版广播接收器 -->
        <receiver
            android:name=".data.receiver.OrderAssignmentReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.myanmarexpress.courier.ORDER_ASSIGNMENT" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".data.receiver.LocationUpdateReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.myanmarexpress.courier.LOCATION_UPDATE" />
            </intent-filter>
        </receiver>

        <!-- 骑手版应用快捷方式 -->
        <meta-data
            android:name="android.app.shortcuts"
            android:resource="@xml/shortcuts_courier" />

    </application>

</manifest>
