# =============================================
# 缅甸快递系统环境变量配置示例
# Myanmar Express Delivery System Environment Variables
# =============================================

# 应用基础配置
NODE_ENV=production
REACT_APP_VERSION=2.1.0
REACT_APP_BUILD_TIME=2024-12-19T10:00:00Z
REACT_APP_MYANMAR_TIMEZONE=Asia/Yangon

# 域名配置
DOMAIN_NAME=market-link-express.com
NGINX_HOST=market-link-express.com

# API 配置
REACT_APP_API_URL=https://api.market-link-express.com
REACT_APP_API_VERSION=v1

# Supabase 配置
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key

# 数据库配置
MYSQL_ROOT_PASSWORD=your-secure-root-password
MYSQL_DATABASE=myanmar_express
MYSQL_USER=express_user
MYSQL_PASSWORD=your-secure-password
MYSQL_HOST=mysql
MYSQL_PORT=3306

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT 配置
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# 缅甸支付配置
# KBZ Pay
KBZ_PAY_MERCHANT_ID=your-kbz-merchant-id
KBZ_PAY_SECRET_KEY=your-kbz-secret-key
KBZ_PAY_API_URL=https://api.kbzpay.com

# Wave Money
WAVE_MONEY_MERCHANT_ID=your-wave-merchant-id
WAVE_MONEY_API_KEY=your-wave-api-key
WAVE_MONEY_API_URL=https://api.wavemoney.com.mm

# AYA Pay
AYA_PAY_MERCHANT_ID=your-aya-merchant-id
AYA_PAY_API_KEY=your-aya-api-key
AYA_PAY_API_URL=https://api.ayapay.com

# CB Pay
CB_PAY_MERCHANT_ID=your-cb-merchant-id
CB_PAY_API_KEY=your-cb-api-key
CB_PAY_API_URL=https://api.cbpay.com.mm

# 短信服务配置（缅甸本地化）
SMS_PROVIDER=telenor_myanmar
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=MyExpress
SMS_API_URL=https://api.telenor.com.mm/sms

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@market-link-express.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_NAME=Myanmar Express
SMTP_FROM_EMAIL=noreply@market-link-express.com

# 文件存储配置
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
STORAGE_TYPE=local

# 地图服务配置
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# 推送通知配置
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id

# 监控配置
GRAFANA_ADMIN_PASSWORD=your-grafana-password
PROMETHEUS_RETENTION_DAYS=30

# SSL 证书配置
SSL_EMAIL=admin@market-link-express.com
SSL_DOMAINS=market-link-express.com,www.market-link-express.com,api.market-link-express.com

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=myanmar-express-backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# 业务配置
BASE_DELIVERY_FEE=2000
WEIGHT_FEE_PER_KG=1000
MAX_DELIVERY_DISTANCE=50
MAX_PACKAGE_WEIGHT=50
COD_MAX_AMOUNT=1000000

# 工作时间配置
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=18:00
WORKING_DAYS=monday,tuesday,wednesday,thursday,friday,saturday

# 地理位置配置
DEFAULT_LATITUDE=16.8661
DEFAULT_LONGITUDE=96.1951
DEFAULT_CITY=Yangon
DEFAULT_COUNTRY=Myanmar

# 货币配置
DEFAULT_CURRENCY=MMK
USD_TO_MMK_RATE=2100
CURRENCY_UPDATE_INTERVAL=3600

# 语言配置
DEFAULT_LANGUAGE=mm
SUPPORTED_LANGUAGES=mm,en,zh
